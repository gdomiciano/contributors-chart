{
    "name": "contributors-chart",
    "version": "3.0.0",
    "description": "Responsive application, that user can search for a repository and see contributions per user in a chart.",
    "author": "Geisy Domiciano <geisydomiciano@gmail.com>",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "generate": "nuxt generate",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
        "precommit": "npm run lint",
        "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
        "build:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt build",
        "generate:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
        "cypress:open": "./node_modules/.bin/cypress open",
        "dcr:build": "docker build -t contributors .",
        "dcr:run": "FORCE_COLOR=1 docker run contributors:latest npm run ci",
        "start-server": "npm run dev",
        "test": "FORCE_COLOR=1 cypress run --browser chrome",
        "ci": "start-server-and-test start-server http://localhost:3000 test"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.6.0",
        "@nuxtjs/proxy": "^1.3.3",
        "@nuxtjs/pwa": "^2.6.0",
        "acorn": "^6.3.0",
        "acorn-jsx": "^5.0.2",
        "npm": "^6.11.3",
        "nuxt": "^2.9.2",
        "vue-chartjs": "^3.4.2"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "chai": "^4.2.0",
        "chart.js": "^2.8.0",
        "cross-env": "^5.2.1",
        "cypress": "^3.4.1",
        "cypress-blink-test": "^0.1.5",
        "cypress-visual-regression": "^1.0.4",
        "eslint": "^3.19.0",
        "eslint-loader": "^2.2.1",
        "eslint-plugin-html": "^4.0.6",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-vue": "^4.7.1",
        "node-sass": "^4.12.0",
        "push-dir": "^0.4.1",
        "sass-loader": "^7.3.1",
        "start-server-and-test": "^1.10.2"
    }
}
